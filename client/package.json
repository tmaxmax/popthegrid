{
  "name": "popthegrid",
  "version": "0.4.4",
  "description": "Frontend for the 'Pop the grid!' game",
  "type": "module",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "test": "jest --passWithNoTests --maxWorkers=1",
    "preversion": "npm t",
    "version": "docker build --build-arg NODE_ENV=production --build-arg DEBUG= -t tmaxmax/popthegrid:latest-frontend -t tmaxmax/popthegrid:\"$npm_package_version\"-frontend .",
