  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmaxmax/popthegrid.git"
  },
  "author": "Teodor Maxim",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tmaxmax/popthegrid/issues"
  },
  "homepage": "https://github.com/tmaxmax/popthegrid#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-eslint": "^8.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@tmaxmax/rollup-plugin-inject-process-env": "^1.3.2",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.16",
    "@types/jsdom": "^16.2.5",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.14.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-websocket-mock": "^2.2.0",
    "jsdom": "^16.4.0",
    "mock-socket": "^9.0.3",
    "postcss": "^8.1.10",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "rollup": "^2.34.0",
    "rollup-plugin-hotreload": "^2.3.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
