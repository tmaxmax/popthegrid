{
  "name": "popthegrid",
  "private": true,
  "version": "0.6.0-alpha.3",
  "description": "Frontend for the 'Pop the grid!' game",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:create": "docker create --name postgres-popthegrid --env-file ./.env.local -p 5432:5432 postgres:15.2-alpine",
    "db:start": "docker start postgres-popthegrid",
    "db:stop": "docker stop postgres-popthegrid"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.1.0",
    "@tsconfig/svelte": "^4.0.1",
    "@types/debug": "^4.1.7",
    "@types/human-date": "^1.4.2",
    "@types/humanize-duration": "^3.27.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "jsdom": "^21.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-svelte": "^2.10.0",
    "svelte": "^3.58.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.0",
    "vitest": "^0.30.1",
    "vitest-fetch-mock": "^0.2.2"
  },
  "dependencies": {
    "@svelte-put/clickoutside": "^2.0.0",
    "@svelte-put/copy": "^2.0.0",
    "color-interpolate": "^1.0.5",
    "debug": "^4.3.4",
    "human-date": "^1.4.0",
    "humanize-duration": "^3.28.0",
    "resize-observer-polyfill": "^1.5.1",
    "svelte-autosize": "^1.1.0",
    "svelte-confetti": "^1.2.2",
    "svelte-material-icons": "^3.0.4"
  }
}
